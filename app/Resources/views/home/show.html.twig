{% extends 'base.html.twig' %}

{% block title %} Results {% endblock %}

{% block body %}
<div class="container">
    <table class="table">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Gender</th>
        </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.firstName|e }}</td>
                    <td>{{ user.lastName|e }}</td>
                    <td>{{ user.email|e }}</td>
                    <td>{{ user.sex == 'm'? 'Male': ((user.sex == 'f') ? 'Female': 'Not specified') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}